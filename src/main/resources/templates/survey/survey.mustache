{{> layout/header}}

<div class="container-fluid">
    <div class="row">
        <div style="margin-top: 10px; margin-left: 75%">
            <a href="/admin/surveys/save-form" class="btn btn-success">설문지 작성</a>
        </div>

        <aside class="col-md-3" style="text-align: center; margin-top: 60px; width: 180px; margin-left: 10%;">
            <div class="card" style="border-radius: 10px;">
                <div style="width: 100%;">
                    <div>
                        <h6 class="card-subtitle text-muted"></h6>
                        <ul class="nav flex-column nav-pills">
                            <li>
                                <div style="background-color: green; color: white" class="nav-link sub-menu a p-1">설문지 관리
                                </div>
                            </li>
                            <li class="nav-item" style="border-top: 1px solid rgba(0, 0, 0, 0.5);">
                                <a id="food" href="/admin/surveys" class="nav-link sub-menu a p-1 mb-1">설문지 관리</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>

        <!-- 표 및 페이지네이션 -->
        <div style="width: 1200px">
            <div class="container p-5">
                <!-- 표 시작 -->
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">설문지 제목</th>
                        <th scope="col">총 문항 수</th>
                        <th scope="col">시작 날짜</th>
                        <th scope="col">마감 날짜</th>
                        <th scope="col">생성 날짜</th>
                        <th scope="col" class="text-center">작업</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#surveys}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{title}}</td>
                            <td>총 문항 수</td>
                            <td>{{openingTime}}</td>
                            <td>{{closingTime}}</td>
                            <td>{{createdAt}}</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a href="/admin/surveys/detail" class="btn btn-primary me-1">상세보기</a>
                                    <a href="/admin/surveys/update-form" class="btn btn-success me-1">수정</a>
                                    <form action="/admin/surveys/delete" method="post">
                                        <button class="btn btn-danger">삭제</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {{/surveys}}
                    </tbody>
                </table>
                <!-- 표 끝 -->

                <!-- 페이지네이션 -->
                <ul class="pagination d-flex justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>

</div>
