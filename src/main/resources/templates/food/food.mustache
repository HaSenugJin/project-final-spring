{{> layout/header}}

<div class="container-fluid">
    <div class="row">
        <div style="margin-top: 10px; margin-left: 75%">
            <a href="/admin/foods/save-form" class="btn btn-warning">음식 작성</a>
        </div>

        <aside class="col-md-3" style="text-align: center; margin-top: 60px; width: 180px; margin-left: 10%;">
            <div class="card" style="border-radius: 10px;">
                <div style="width: 100%;">
                    <div>
                        <h6 class="card-subtitle text-muted"></h6>
                        <ul class="nav flex-column nav-pills">
                            <li class="nav-item">
                                <a id="userHome" class="nav-link sub-menu a p-1 mb-1" href="/admin/challenge/list">챌린지
                                    관리</a>
                            </li>
                            <li class="nav-item" style="border-top: 1px solid rgba(0, 0, 0, 0.5);">
                                <a style="background-color: green; color: white" class="nav-link sub-menu a p-1">음식
                                    관리</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>
        <!-- 표 및 페이지네이션 -->
        <div style="width: 1200px">
            <div class="container p-5">
                <!-- 표 시작 -->
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">음식이름</th>
                        <th scope="col">칼로리</th>
                        <th scope="col">탄수화물</th>
                        <th scope="col">단백질</th>
                        <th scope="col">지방</th>
                        <th scope="col">양</th>
                        <th scope="col" class="text-center">작업</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#foods}}
                        <tr>
                            <th scope="row">1</th>
                            <td>{{name}}</td>
                            <td>{{kcal}}</td>
                            <td>{{carbo}}</td>
                            <td>{{protein}}</td>
                            <td>{{fat}}</td>
                            <td>{{gram}}</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a href="/admin/foods/{{id}}/update-form" class="btn btn-warning me-1">수정</a>
                                    <form action="/admin/foods/{{id}}/delete" method="post">
                                        <button class="btn btn-danger">삭제</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {{/foods}}
                    <!-- 여러 개의 행 추가 가능 -->
                    </tbody>
                </table>
                <!-- 표 끝 -->

                <!-- 페이지네이션 -->
                <ul class="pagination d-flex justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
